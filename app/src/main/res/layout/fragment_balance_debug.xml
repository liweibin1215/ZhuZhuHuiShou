<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.rys.smartrecycler.view.fragment.admin.BalanceDebugFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            >

            <Button
                android:id="@+id/btn_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开串口"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_theme_selector"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                />
            <Button
                android:id="@+id/btn_close"
                android:layout_marginLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭串口"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_theme_selector"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择副柜："
                android:textSize="30sp"
                android:textColor="@color/blue_theme"
                />

            <Spinner
                android:layout_marginLeft="100dp"
                android:id="@+id/et_desk"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:gravity="right"
                android:textSize="30sp"
                android:textColor="@color/color_black"
                android:background="@drawable/spinner_bg"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="锁定状态："
                android:textSize="30sp"
                android:textColor="@color/blue_theme"
                />

            <TextView
                android:id="@+id/tv_lock_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未添加"
                android:textColor="@color/red_error"
                android:textSize="30sp"
                />
            <Button
                android:visibility="gone"
                android:id="@+id/btn_lock"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="锁定"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_theme_selector"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            >

            <Button
                android:id="@+id/btn_get_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取重量"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/btn_theme_selector"
                />
            <Button
                android:id="@+id/btn_set_zero"
                android:layout_marginLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清零"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/btn_theme_selector"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            >

            <Button
                android:id="@+id/btn_get_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取量程"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/btn_theme_selector"
                />
            <EditText
                android:id="@+id/et_set_range"
                android:layout_marginLeft="100dp"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:hint="请输入量程(单位:g)"
                android:textSize="30sp"
                />
            <Button
                android:id="@+id/btn_set_range"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置量程"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/btn_theme_selector"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            >

            <EditText
                android:id="@+id/et_set_devision"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:hint="请输入分贝值"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn_set_devision"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置分贝值"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/btn_theme_selector"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            >

            <Button
                android:id="@+id/btn_set_ldw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空载标定"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/btn_theme_selector"
                />
            <EditText
                android:id="@+id/et_set_lwt"
                android:layout_marginLeft="100dp"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:hint="请输入标定重量(单位:g)"
                android:textSize="30sp"
                />
            <Button
                android:id="@+id/btn_set_lwt"
                android:layout_marginLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定值标定"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/btn_theme_selector"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="返回"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/btn_theme_selector"
        android:textSize="30sp"
        />
</RelativeLayout>
