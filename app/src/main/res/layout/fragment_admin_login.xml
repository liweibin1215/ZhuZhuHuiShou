<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.rys.smartrecycler.view.fragment.AdminLoginFragment">


    <EditText
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:hint="请输入后台密码"
        android:id="@+id/edit_intput"
        android:textSize="30sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_centerInParent="true"
        />

    <LinearLayout
        android:layout_below="@+id/edit_intput"
        android:layout_marginTop="100dp"
        android:id="@+id/ll_recycle_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:background="@drawable/btn_gray_selector"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="@drawable/btn_theme_selector"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="30sp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/blue_theme"
        android:textSize="50sp"
        android:padding="50dp"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
