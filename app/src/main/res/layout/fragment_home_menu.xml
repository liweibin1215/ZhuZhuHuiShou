<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rys.smartrecycler.view.fragment.FrontHomeFragment"
    android:background="@color/white"
    >

    <android.support.v7.widget.CardView
        android:layout_marginLeft="120dp"
        android:layout_centerVertical="true"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardBackgroundColor="@color/blue_theme"
        app:cardCornerRadius="30dp"
        app:cardElevation="15dp"
        android:clickable="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rl_client"
            >
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ig_user"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始投递"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:textSize="40sp"
                />
        </RelativeLayout>



    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginRight="120dp"
        android:layout_centerVertical="true"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="15dp"
        android:clickable="true"
        app:cardBackgroundColor="#FF6600"
        android:layout_alignParentRight="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rl_admin"
            >
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ig_admin"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回收员"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:textSize="40sp"
                />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#ffffff"
        android:id="@+id/btn_admin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
