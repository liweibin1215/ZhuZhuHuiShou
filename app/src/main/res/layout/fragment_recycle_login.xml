<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.rys.smartrecycler.view.fragment.RecycleLoginFragment">


    <RelativeLayout
        android:layout_width="600dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/cv_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        >

        <View
            android:layout_width="120dp"
            android:layout_height="5dp"
            android:background="@color/black_theme_one"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_title"
            android:layout_marginRight="50dp"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_theme_one"
            android:text="请选择登录方式"
            android:layout_centerInParent="true"
            android:textSize="30sp"
            />

        <View
            android:layout_toRightOf="@+id/tv_title"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"
            android:layout_width="120dp"
            android:layout_height="5dp"
            android:background="@color/black_theme_one"
            />



    </RelativeLayout>



    <android.support.v7.widget.CardView
        android:id="@+id/cv_content"
        android:layout_width="700dp"
        android:layout_height="450dp"
        app:cardBackgroundColor="#99CCFF"
        app:cardCornerRadius="30dp"
        app:cardElevation="15dp"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:id="@+id/tv_title_saoma"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="扫码登录"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="@color/black_theme_thr"
                />
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/ig_login_saoma"
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_below="@+id/tv_title_saoma"
                android:layout_alignLeft="@+id/tv_title_saoma"
                android:background="@color/black_theme_thr"
                />
            <TextView
                android:layout_marginRight="70dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:id="@+id/tv_title_account"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="手机验证码登录"
                android:textSize="30sp"
                android:textColor="@color/black_theme_one"
                />
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/ig_login_phone"
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_below="@+id/tv_title_account"
                android:layout_alignLeft="@+id/tv_title_account"
                android:background="@color/black_theme_one"
                />
            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_cancel"
                android:layout_alignParentRight="true"
                />

            <LinearLayout
                android:layout_below="@+id/tv_title_saoma"
                android:id="@+id/ll_login_scan"
                android:visibility="gone"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:id="@+id/img_home_login"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="请打开微信客户端扫一扫"
                    android:textSize="25sp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:visibility="visible"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/tv_title_saoma"
                android:id="@+id/rl_login_phone"
                android:layout_width="500dp"
                android:layout_height="300dp"
                >

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="500dp"
                    android:layout_height="60dp"
                    android:text=""
                    android:hint="手机号"
                    android:textSize="30sp"
                    />
                <EditText
                    android:layout_marginTop="50dp"
                    android:layout_below="@id/et_phone"
                    android:id="@+id/et_pwssword"
                    android:layout_width="500dp"
                    android:layout_height="60dp"
                    android:text=""
                    android:hint="短信验证码"
                    android:textSize="30sp"
                    />
                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_theme_selector"
                    android:textColor="@color/white"
                    android:text="确定"
                    android:textSize="30sp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    />
                <TextView
                    android:id="@+id/tv_get_pwd"
                    android:gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_below="@id/et_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="获取验证码"
                    android:textSize="30sp"
                    android:textColor="#DF6B0B"
                    android:layout_marginRight="20dp"
                    android:layout_alignRight="@+id/et_pwssword"
                    />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/blue_theme"
        android:textSize="50sp"
        android:padding="50dp"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
