<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rys.smartrecycler.view.fragment.FrontChoiceFragment">

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@drawable/btn_theme_selector"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="600dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/cv_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        >

        <View
            android:layout_width="120dp"
            android:layout_height="5dp"
            android:background="@color/color_black"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_title"
            android:layout_marginRight="50dp"
            />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:text="请选择投递类型"
            android:layout_centerInParent="true"
            android:textSize="30sp"
            />

        <View
            android:layout_toRightOf="@+id/tv_title"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"
            android:layout_width="120dp"
            android:layout_height="5dp"
            android:background="@color/color_black"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cv_content"
        android:layout_marginBottom="200dp"
        android:layout_centerInParent="true"
        android:layout_width="1000dp"
        android:layout_height="400dp">


        <RelativeLayout
            android:visibility="invisible"
            android:background="@drawable/bg_selector_blue_gray"
            android:id="@+id/ll_goods1"
            android:layout_width="300dp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/ig_goods1"
                android:layout_width="100dp"
                android:layout_height="150dp"
                />

            <TextView
                android:id="@+id/tv_goods1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/ig_goods1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30sp"
                android:textColor="@color/color_black"
                />
            <TextView
                android:id="@+id/tv_price1"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/ig_goods1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text=""
                android:textColor="@color/color_black"
                />
            <ImageView
                android:id="@+id/ic_full_1"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_full"
                />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="invisible"
            android:background="@drawable/bg_selector_blue_gray"
            android:layout_centerHorizontal="true"
            android:id="@+id/ll_goods2"
            android:layout_width="300dp"
            android:layout_height="150dp">


            <ImageView
                android:id="@+id/ig_goods2"
                android:layout_width="100dp"
                android:layout_height="150dp"
                />
            <TextView
                android:id="@+id/tv_goods2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/ig_goods2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30sp"
                android:textColor="@color/color_black"
                />
            <TextView
                android:id="@+id/tv_price2"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/ig_goods2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text=""
                android:textColor="@color/color_black"
                />
            <ImageView
                android:id="@+id/ic_full_2"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_full"
                />
        </RelativeLayout>


        <RelativeLayout
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:id="@+id/ll_goods3"
            android:layout_width="300dp"
            android:background="@drawable/bg_selector_blue_gray"
            android:layout_height="150dp">


            <ImageView
                android:id="@+id/ig_goods3"
                android:layout_width="100dp"
                android:layout_height="200dp"
                />
            <TextView
                android:id="@+id/tv_goods3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/ig_goods3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30sp"
                android:textColor="@color/color_black"
                />
            <TextView
                android:id="@+id/tv_price3"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/ig_goods3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text=""
                android:textColor="@color/color_black"
                />
            <ImageView
                android:id="@+id/ic_full_3"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_full"
                />
        </RelativeLayout>


        <RelativeLayout
            android:visibility="invisible"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/ll_goods1"
            android:id="@+id/ll_goods4"
            android:layout_width="300dp"
            android:background="@drawable/bg_selector_blue_gray"
            android:layout_height="150dp">


            <ImageView
                android:id="@+id/ig_goods4"
                android:layout_width="100dp"
                android:layout_height="150dp"
                />
            <TextView
                android:id="@+id/tv_goods4"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/ig_goods4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30sp"
                android:textColor="@color/color_black"
                />
            <TextView
                android:id="@+id/tv_price4"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/ig_goods4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text=""
                android:textColor="@color/color_black"
                />
            <ImageView
                android:id="@+id/ic_full_4"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_full"
                />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="invisible"
            android:background="@drawable/bg_selector_blue_gray"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/ll_goods2"
            android:layout_centerHorizontal="true"
            android:id="@+id/ll_goods5"
            android:layout_width="300dp"
            android:layout_height="150dp">


            <ImageView
                android:id="@+id/ig_goods5"
                android:layout_width="100dp"
                android:layout_height="150dp"
                />
            <TextView
                android:id="@+id/tv_goods5"
                android:textColor="@color/color_black"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/ig_goods5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30sp"
                />
            <TextView
                android:id="@+id/tv_price5"
                android:textColor="@color/color_black"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/ig_goods5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text=""
                />
            <ImageView
                android:id="@+id/ic_full_5"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_full"
                />
        </RelativeLayout>


        <RelativeLayout
            android:visibility="invisible"
            android:background="@drawable/bg_selector_blue_gray"
            android:layout_below="@+id/ll_goods3"
            android:layout_marginTop="100dp"
            android:layout_alignParentRight="true"
            android:id="@+id/ll_goods6"
            android:layout_width="300dp"
            android:layout_height="150dp">


            <ImageView
                android:id="@+id/ig_goods6"
                android:layout_width="100dp"
                android:layout_height="150dp"
                />
            <TextView
                android:id="@+id/tv_goods6"
                android:textColor="@color/color_black"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/ig_goods6"
                android:layout_width="wrap_content"
